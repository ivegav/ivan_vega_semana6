<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de Infracción"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/textViewFolioLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Folio:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewFolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewRutInspectorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUT del Inspector:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextRutInspector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el RUT del Inspector"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textViewNombreLocalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Local Comercial:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextNombreLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre del Local Comercial"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textViewDireccionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la dirección"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textViewTipoInfraccionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infracción Cometida:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextTipoInfraccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la infracción cometida"
        android:inputType="text"/>

    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonCompartir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartir Información"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>